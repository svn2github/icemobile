<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="Preferences"
        android:key="preferences">
        
        <EditTextPreference
            android:key="url"
            android:title="New URL" 
            android:summary="Load a new URL into container."
            android:dialogTitle="URL"
            android:dialogMessage="Set URL"    
            android:persistent="true"
            android:defaultValue="http://"
            />
       <CheckBoxPreference 
            android:key="gallery"
            android:summary="Select media from the gallery."
            android:title="Use Media Gallery" 
            android:defaultValue="false"
        />
        <CheckBoxPreference 
            android:key="c2dm"
            android:summary="Use C2DM Notification"
            android:title="C2DM Notify" 
            android:defaultValue="true"
        />
        <EditTextPreference
            android:key="email"
            android:title="Email Notification" 
            android:summary="Email address for cloud notification."
            android:dialogTitle="Email Notify"
            android:dialogMessage="Set email notification"    
            android:persistent="true"
            android:defaultValue=""
            />
        <CheckBoxPreference
            android:key="progressBar"
            android:summary="Display progress dialog overlay."
            android:title="Progress Dialog"
            android:defaultValue="false"
        />
        <CheckBoxPreference
            android:key="accelerate"
            android:summary="Enable Hardware Acceleration."
            android:title="Hardware Acceleration"
            android:defaultValue="false"
        />
    </PreferenceCategory>
    
</PreferenceScreen>
